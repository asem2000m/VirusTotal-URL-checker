{
    "manifest_version": 3,
    "name": "Simple VT URL Checker",
    "version": "1.0",
    "description": "Checks visited URLs against VirusTotal and alerts if potentially risky.",
    "permissions": [
      "tabs",      
      "scripting"  
    ],
    "host_permissions": [
      "<all_urls>",
      "https://www.virustotal.com/api/v3/*"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }